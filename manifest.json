{
  "manifest_version": 2,

  "name": "Anime Update Tracker",
  "description": "Keep track of where you last left off",
  "version": "0.4",
  "icons": { "128": "icon_128.png" },
  "background":{
    "scripts":["./background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://*/*",
    "storage"]
}
